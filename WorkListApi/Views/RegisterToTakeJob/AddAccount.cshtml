
@{
    Layout = null!;
}
@model NewWorkPlaceDomain.Entities.ToTakeJob.Register.RegisterToTakeJob
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/AddAccountToTakeJob.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <title>TalentStudent</title>
</head>
<body>
    <header>
        <img src="https://i.ibb.co/tpkYydz/d8563a81-a8d0-4391-a12e-1bcdcc261659.jpg" alt="Logo portalu do szukania pracy" class="logo-header">
        <input type="color" class="color-picker">
        <nav class="nav">
            <ul>
                <li><a href="#">Strona Główna</a></li>
                <li><a href="#">Oferty Pracy</a></li>
                <li><a href="#">Dla Pracodawcy</a></li>
            </ul>
        </nav>
    </header>
    <div class="flex-container">
        <div class="log">
            <img src="https://i.ibb.co/5kvCH70/edcf227f-9d6d-45f8-9f77-79a2d6d6a1e8.jpg" alt="photo to search" class="logo-search" />
        </div>
        <div class="register">
            <form action="AddAcount" method="post">
                <h1 class="register-head">Rejestracja</h1>
                <input type="email" name="RegisterEmailToTakeJob" id="RegisterEmailToTakeJob" placeholder="E-mail" required>
                <input type="password" name="RegisterPasswordToTakeJob" id="RegisterPasswordToTakeJob" placeholder="Hasło" required>
                <input type="text" name="RegisterPhoneNumberToTakeJob" id="RegisterPhoneNumberToTakeJob" placeholder="Numer telefonu" required>
                <input type="text" name="RegisterNameToTakeJob" id="RegisterNameToTakeJob" placeholder="Nazwa firmy" required>
                <input type="text" name="RegisterAddressToTakeJob" id="RegisterAddressToTakeJob" placeholder="Adres firmy" required>
                <input type="submit" value="Zarejestruj się">
            </form>
        </div>

    </div>
    </body>
    </html>
